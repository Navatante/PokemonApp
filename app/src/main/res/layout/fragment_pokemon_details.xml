<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#F3F4F6">

    <!-- Imagen del Pokémon -->
    <ImageView
        android:id="@+id/pokemonImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/image_background"
        android:scaleType="centerCrop"/>

    <!-- Nombre del Pokémon -->
    <TextView
        android:id="@+id/pokemonNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="16dp"/>

    <!-- Línea divisoria -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <!-- Indice del Pokedex -->
    <TextView
        android:id="@+id/pokedexIndexTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#555555"
        android:layout_marginTop="8dp"/>

    <!-- Tipos del Pokémon -->
    <TextView
        android:id="@+id/pokemonTypesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#666666"
        android:layout_marginTop="8dp"/>

    <!-- Línea divisoria -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <!-- Altura del Pokémon -->
    <TextView
        android:id="@+id/alturaPokemonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#555555"
        android:layout_marginTop="8dp"/>

    <!-- Peso del Pokémon -->
    <TextView
        android:id="@+id/pesoPokemonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#555555"
        android:layout_marginTop="8dp"/>

    <!-- Botón Atrás -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/atrasBtn"
        android:layout_marginTop="16dp"
        android:backgroundTint="#007BFF"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:elevation="4dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button_background"/>

</LinearLayout>
